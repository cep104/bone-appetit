<div id="pet-show">
<h1><%= @pet.name %></h1>
<% if @pet.pet_img.attached? %>
<div class="show-img">
 <%= image_tag url_for(@pet.pet_img)%>
</div>
<% end %>
<div class="info">
<h3>Pet Category: </h3><p><%= @pet.pet_category.name%></p>
<p>Owner name: <%= @pet.user.name %></p>
<% if current_user == @pet.user %>
<%= link_to "Edit Pet", edit_pet_path(@pet)%>
<%= link_to "Delete Pet",  @recipe,  method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
</div>
</div>
