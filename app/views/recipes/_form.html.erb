<%= form_for(recipe) do |f| %>
<%= f.label "Select A Pet Category" %>
<%= f.collection_select :pet_category_id, PetCategory.all, :id, :name, prompt:true %><br>
<%= f.label "Or Create New Pet Category" %>
  <%= f.fields_for :pet_category, @recipe.build_pet_category do |pc|%>
  <%= pc.label :name %>
  <%= pc.text_field :name %><br>
  <% end %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :description %>
  <%= f.text_field :description %><br><br>
  <%= f.label :instructions %>
  <%= f.text_area :instructions %><br>
   <%= f.label "Recipe Image"%>
    <%= f.file_field :recipe_img %>
  
  <h3>Add Ingredients</h3>

  <%= f.fields_for :measurements do |m| %>
  
  <%= m.fields_for :ingredient do |ing_fields| %>
  <%= ing_fields.label :name, "Ingredient:"%>
  <%= ing_fields.text_field :name %>
  <% end %>
  <%= m.label :quantity %>
      <%= m.text_field :quantity %>
      <%= m.label :unit %>
      <%= m.text_field :unit %>
      <br>
  <% end %>
 
  
  <br/>

  <%= f.submit %>
<% end %>