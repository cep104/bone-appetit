<%= form_for(@recipe) do |f| %>
<%= pet_category_select(@recipe)%>
<%= f.label :pet_category %>
  <%= f.text_field :pet_category, :value => @recipe.pet_category.name %><br>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :description %>
  <%= f.text_area:description %><br>
  <%= f.label "Recipe Image"%>
<%= f.file_field :recipe_img %>
  
  <br/>

  <%= f.submit %>
<% end %>